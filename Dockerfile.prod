# Debian based python container
FROM python:3.12-slim
LABEL author="jsamis"
ENV PYTHONUNBUFFERED=1

RUN apt-get update && apt-get install -y apt-transport-https ca-certificates gnupg curl poppler-utils

WORKDIR /usr/src/app

COPY ./requirements.txt ./

RUN python -m pip install --upgrade pip
RUN pip install --no-cache-dir -r requirements.txt

COPY ./src ./src

EXPOSE 4000

# TODO: Might need to test this cmd further, having issues with file sys 
CMD ["uvicorn", "src.app.main:app", "--host", "0.0.0.0", "--port", "4000", "--proxy-headers"]
